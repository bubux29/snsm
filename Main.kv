# -*- coding: utf-8 -*-
#: import TabbedPanel kivy.uix.tabbedpanel

<Notebook@TabbedPanel>:
    cols: 1
    spacing: 10
    padding: 20
    do_default_tab: False
    tab_width: self.width / 17 * 3


<Menu_Principal>:
    cours: coursgrid
    BoxLayout:
        padding: 40
        size: root.width/2, root.height
        center_x: root.width/2
        orientation: 'vertical'
        Label:
            text: u"S\u00e9lectionnez un cours"
        GridLayout:
            id: coursgrid

<Main>:
    notebook: bx.nb
    BoxLayout:
        id: bx
        nb: nb
        size: root.width, root.height
        orientation: 'vertical'
        Notebook:
            id: nb
