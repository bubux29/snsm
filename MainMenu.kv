#: import CalendarWidget KivyCalendar

<MenuButton@Button>:
    color: 1,1,1,1
    font_size: 20
    markup: True
    size: self.texture_size

<MenuComment>:
    comments_txt: comments
    valider_btn: valider
    size_hint: (1,1)
    pos_hint: {"top": 1, "center_x": .5}
    padding: 10
    spacing: 20
    Label:
        id: comments
        size_hint: .1,.1
        pos_hint: {"top": .9, "center_x": .5}
    Button:
        id: valider
        size_hint: None,.1
        pos_hint: {"top": .1, "center_x": .8}
        text: 'Valider'
    Widget:

#<ExpertMenuSub>:
    #BoxLayout:
        #orientation: 'vertical'
        #Button:
            #id: back
            #text: 'Retour'
            #size_hint: .1, .1
            #pos_hint: {'top': 1, 'right': 1}

<ExpertMenuLabel>:
    #pos_hint: {"left": 1}
    halign: "right"
    #size_hint: None, .1

<ExpertMenuInput>:
    multiline: False
    size_hint: None, .1
    width: 200
    #heigth: 5
    
<ExpertMenuEleves>:
    nom: sc.nom
    prenom: sc.prenom
    naissance: sc.naissance
    debformation: sc.formation
    telephone: sc.telephone
    courriel: sc.courriel
    est_formateur: sc.est_formateur
    orientation: 'vertical'
    size_hint: (.9, .9)
    pos_hint: {"center_x": .5}
    Label:
        size_hint: .1,.1
        pos_hint: {"top": 1, "center_x": .5}
        text: 'Ajouter un élève'
    ScrollView:
        id: sc
        pos_hint: {"top": .9, "center_x": .4}
        #size_hint: None, 0.8
        size: root.width*3/4, root.height
        nom: gl.nom
        prenom: gl.prenom
        naissance: gl.naissance
        formation: gl.formation
        telephone: gl.telephone
        courriel: gl.courriel
        est_formateur: gl.est_formateur
        GridLayout:
            #size_hint: .9,None
            cols: 2
            id: gl
            #padding: 5
            #spacing: 5
            nom: nom
            prenom: prenom
            naissance: naissance
            formation: formation
            telephone: telephone
            est_formateur: est_formateur
            courriel: courriel
            ExpertMenuLabel:
                halign: "right"
                text: 'Nom :'
            ExpertMenuInput:
                id: nom
            ExpertMenuLabel:
                halign: "right"
                text: 'Prénom :'
            ExpertMenuInput:
                id: prenom
            ExpertMenuLabel:
                text: 'Téléphone :'
            ExpertMenuInput:
                id: telephone
            ExpertMenuLabel:
                text: 'Courriel :'
            ExpertMenuInput:
                id: courriel
            ExpertMenuLabel:
                text: 'Date de naissance :'
            DatePicker:
                id: naissance
                init_date: [10, 10, 1010]
                multiline: 'False'
                size_hint: None, .1
                pHint: 0.4, 0.4
            ExpertMenuLabel:
                text: 'Début formation SNSM :'
            DatePicker:
                id: formation
                multiline: 'False'
                size_hint: None, .1
                pHint: 0.4, 0.4
            ExpertMenuLabel:
                text: "Est formateur :"
            CheckBox:
                id: est_formateur
                size_hint: .1, .1
                pos_hint: {"center_x": 0}
            Widget:

<ExpertMenuMain>:
    padding: 40
    #size: root.width/2, root.height
    #center_x: root.width/2
    #size: self.size
    #center_x: self.center_x
    orientation: 'vertical'
    eleves_bouton: grigrid.eleves_modif
    lieux_bouton: grigrid.lieu_modif
    formateur_bouton: grigrid.formateur_modif

    Label:
        size_hint: 1, .1
        pos_hint: {"top": .1}
        text: 'Gérez les bases de données: '
    GridLayout:
        spacing: 10
        size_hint: 1, .6
        id: grigrid
        eleves_modif: eleves_modif
        formateur_modif: formateur_modif
        lieu_modif: lieu_modif
        cols: 2
        MenuButton:
            text: 'Élèves'
            id: eleves_modif
        MenuButton:
            text: 'Formateurs'
            id: formateur_modif
        MenuButton:
            text: 'Lieux de formation'
            id: lieu_modif

<ExpertMenuLieux>:
    lieu: lieu
    description: description
    BoxLayout:
        lieu: sc.lieu
        description: sc.description
        orientation: 'vertical'
        size_hint: .9, .9
        pos_hint: {"top": 1, "center_x": .5}
        Label:
            size_hint: .1,.1
            pos_hint: {"top": 1, "center_x": .5}
            text: 'Ajouter un lieu de formation'
        ScrollView:
            id: sc
            lieu: lieu
            description: description
            size: root.width*3/4, root.height
            pos_hint: {"top": .9, "center_x": .5}
            GridLayout:
                pos_hint: {"top": 1}
                size_hint: .8, None
                cols: 2
                ExpertMenuLabel:
                    text: "Lieu"
                ExpertMenuInput:
                    id: lieu
                ExpertMenuLabel:
                    text: "Description"
                ExpertMenuInput:
                    id: description
        

<ExpertMenuLayout>:
    mainLayout: main
    BoxLayout:
        size: root.size
        #center_x: root.width/2
        id: main

<MainMenu>:
    menu_cours: coursgrid
    BoxLayout:
        padding: 40
        size: root.width/2, root.height
        center_x: root.width/2
        orientation: 'vertical'
        Label:
            text: "Sélectionnez un cours"
        GridLayout:
            spacing: 10
            cols: 2
            id: coursgrid
