		#orientation: 'vertical'
		#Button:
			#id: back
			#text: 'Retour'
			#size_hint: .1, .1
			#pos_hint: {'top': 1, 'right': 1}

<ExpertMenuLabel>:
	size_hint: None, .1

<ExpertMenuInput>:
	multiline: False
	size_hint: None, .1
	width: 200
	
<ExpertMenuEleves>:
	nom: sel.nom
	prenom: sel.prenom
	naissance: sel.naissance
	debformation: sel.formation
	size: root.size
	orientation: 'vertical'
	Label:
		size_hint: .1,.1
		pos_hint: {"top": .9, "center_x": .5}
		text: 'Ajouter un élève'
	GridLayout:
		cols: 2
		id: sel
		padding: 10
		spacing: 10
		nom: nom
		prenom: prenom
		naissance: naissance
		formation: formation
		pos_hint: {"top": 0.8}
		size_hint: 1,.9
		ExpertMenuLabel:
			text: 'Nom: '
		ExpertMenuInput:
			id: nom
		ExpertMenuLabel:
			text: 'Prenom: '
		ExpertMenuInput:
			id: prenom
		ExpertMenuLabel:
			text: 'Date de naissance:'
		DatePicker:
			id: naissance
			init_date: [10, 10, 1010]
			multiline: 'False'
			size_hint: None, .1
			pHint: 0.4, 0.4
		ExpertMenuLabel:
			text: 'Début formation SNSM:'
		DatePicker:
			id: formation
			multiline: 'False'
			size_hint: None, .1
			pHint: 0.4, 0.4
		#CalendarWidget:
			#init_date: [10, 12, 2012]
		#CalendarWidget:
		Widget:

<ExpertMenuMain>:
	padding: 40
	size: self.size
	center_x: self.center_x
	orientation: 'vertical'
	eleves_bouton: eleves_modif

	Label:
		size_hint: 1, .1
		pos_hint: {"top": .1}
		text: 'Gérez les bases de données: '
	GridLayout:
		spacing: 10
		size_hint: 1, .6
		id: grigrid
		cols: 2
		MenuButton:
			text: 'Élèves'
			id: eleves_modif
		MenuButton:
			text: 'Formateurs'
			id: formateur_modif
		MenuButton:
			text: 'Lieux de formation'
			id: lieu_modif

<ExpertMenuLayout>:
	mainLayout: main
	BoxLayout:
		size: root.width/2, root.height
		center_x: root.width/2
		id: main

<MainMenu>:
	menu_cours: coursgrid
	BoxLayout:
		padding: 40
		size: root.width/2, root.height
		center_x: root.width/2
		orientation: 'vertical'
		Label:
			text: "Sélectionnez un cours"
		GridLayout:
			spacing: 10
			cols: 2
			id: coursgrid
