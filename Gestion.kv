<GestionTextInput>:
    multiline: False
    size_hint: None, .1
    width: 200

<GestionNouvelEleve>:
    core: core
    BoxLayout:
        id: core
        orientation: 'vertical'
        BoxLayout:
            size_hint: .3, .1
            pos_hint: {'top': 1, 'right': .3}
            orientation: 'horizontal'
            Button:
                #size_hint: .3,.1
                text: 'Retour'
                on_press:
                    root.parentscm.transition.direction='right'
                    root.parentscm.current='GestionEleves'
            Button:
                #size_hint: .3,.1
                text: 'OK'
                on_press:
                    print('OK podium')

<GestionEleves>:
    BoxLayout:
        orientation: 'vertical'
        Label:
            text: 'Gestion des élèves'
            size_hint: (1, .2)
        GridLayout:
            pos_hint: {'center_x': .5}
            size_hint: (.8,.9)
            cols:2
            Button:
                text: 'Ajouter un élève'
                on_press:
                    root.parentscm.transition.direction='left'
                    root.parentscm.current = 'NouvelEleve'
            Button:
                text: 'Consulter par groupes'
                on_press:
                    root.parentscm.transition.direction='left'
                    root.parentscm.current = 'ElevesParGroupe'
            Button:
                text: 'Consulter'
                on_press:
                    root.parentscm.transition.direction='left'
                    root.parentscm.current = 'TousEleves'

<GestionMenuPrincipal>:
    BoxLayout:
        orientation: 'vertical'
        Label:
            text: 'Gestion des bases de données'
            size_hint: (1, .2)
        GridLayout:
            pos_hint: {'center_x': .5}
            size_hint: (.8,.9)
            cols:2
            Button:
                text: 'Élèves'
                on_press:
                    root.parentscm.current = 'GestionEleves'
            Button:
                text: 'Lieux de Formation'
                on_press:
                    root.parentscm.current = 'GestionLieux'
