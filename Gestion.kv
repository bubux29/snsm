# -*- coding: utf-8 -*-
<Wix@BoxLayout>:
    canvas:
        Line:
            rectangle: self.x+1,self.y+1,self.width-1,self.height-1

<Notebook@TabbedPanel>:
    cols: 1
    spacing: 10
    padding: 20
    do_default_tab: False
    #tab_width: self.width

<DefaultTab>:
    Image:
        source: 'static/img/logo_snsm_240x240.png'

<NouveauModele>:
    core: core
    BoxLayout:
        id: core
        orientation: 'vertical'
        BoxLayout:
            orientation: 'horizontal'
            size_hint: (.5, .1)
            Button:
                text: 'Retour'
                on_press:
                    root.parentscm.transition.direction = 'right'
                    root.parentscm.current = root.precedent
            Button:
                text: 'Sauvegarder'
                on_press:
                    root.sauvegarder()

<GestionModele>:
    core: core
    BoxLayout:
        orientation: 'vertical'
        BoxLayout:
            orientation: 'horizontal'
            id: actions
            size_hint: (.4,.1)
            Button:
                text: 'Retour'
                on_press:
                    root.parentscm.transition.direction = 'right'
                    root.parentscm.current = 'GestionMenuPrincipal'
            Button:
                text: 'Nouveau'
                on_press:
                    root.parentscm.transition.direction = 'left'
                    root.parentscm.current = root.nouveau.name
        Wix:
            orientation: 'vertical'
            size_hint: (1,1)
            id: core
            pos_hint: {'center_x': .5} ## <--- ????

<GestionMenuPrincipal>:
    BoxLayout:
        orientation: 'vertical'
        Label:
            text: 'Gestion des bases de données'
            size_hint: (1, .2)
        GridLayout:
            pos_hint: {'center_x': .5}
            size_hint: (.8,.9)
            cols:2
            Button:
                text: 'Élèves'
                on_press:
                    root.parentscm.transition.direction = 'left'
                    root.parentscm.current = 'GestionEleves'
            Button:
                text: 'Lieux de Formation'
                on_press:
                    root.parentscm.transition.direction = 'left'
                    root.parentscm.current = 'GestionLieux'
            Button:
                text: 'Modules de Formation'
                on_press:
                    root.parentscm.transition.direction = 'left'
                    root.parentscm.current = 'GestionModules'
            Button:
                text: 'Tests'
                on_press:
                    root.parentscm.transition.direction = 'left'
                    root.parentscm.current = 'GestionTests'
