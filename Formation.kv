# -*- coding: utf-8 -*-
#: import TabbedPanel kivy.uix.tabbedpanel
#: import DropDownMenu dropdownmenu

<Notebook@TabbedPanel>:
    cols: 1
    spacing: 5
    padding: 5
    do_default_tab: False
    #tab_width: self.width

<DefaultTab>:
    Image:
        source: 'static/img/logo_snsm_240x240.png'

<LinedBox@BoxLayout>:
    canvas:
        Line:
            rectangle: self.x+1,self.y+1,self.width-1,self.height-1

<MenuBouton@Button>:
    size_hint: (.5,1)
    pos_hint: { 'center_x': .5 }
    canvas:
        Line:
            rectangle: self.x+1,self.y+1,self.width-1,self.height-1

<NoteEvaluation>:
    notes: notes
    BoxLayout:
        height: 50
        size_hint_y: None
        orientation: 'vertical'
        Label:
            text: 'Notes'
            pos_hint:{'right': 1}
        TextInput:
            id: notes
            height: 40

<PanneauVideo>:
    camera: camera
    capture_bouton: capture_bouton
    consultation: consultation
    orientation: 'horizontal'
    BoxLayout:
        orientation: 'vertical'
        Camera:
            id: camera
            #resolution: (640, 480)
            play: False
        Button:
            id: capture_bouton
            text: 'Capture'
            size_hint_y: None
            height: '48dp'
            on_press: root.capture()
    BoxLayout:
        id: consultation
        size_hint: (.3, 1)
        orientation: 'vertical'

<LigneTest>:
    label_module: nom
    BoxLayout:
        orientation: 'horizontal'
        Label:
            id: nom
            size_hint_x: .7
            pos_hint: {'right': 1}
            text: root.nom
        
<LigneModule>:
    desc_module: desc_module
    orientation: 'horizontal'
    succes: succes
    echec: echec
    size_hint_y: None
    BoxLayout:
        canvas:
            Line:
                rectangle: self.x+1,self.y+1,self.width-1,self.height-1
        orientation: 'horizontal'
        height: 30
        size_hint_y: None
        Label:
            id: desc_module
            #size_hint_y: None
            #pos_hint: {'top': .5}
            text: 'Test de ' + root.nom + ':'
        BoxLayout:
            orientation: 'horizontal'
            size_hint_x: .2
            ToggleButton:
                id: succes
                size_hint_x: .1
                text: 'I'
                group: root.nom_groupe_toggle + root.nom
            ToggleButton:
                id: echec
                size_hint_x: .1
                text: 'O'
                group: root.nom_groupe_toggle + root.nom

<PanneauEvaluation>
    core: core
    photo: photo
    label_eleve: label_eleve
    bandeau: bandeau
    size_hint_y: None
    BoxLayout:
        orientation: 'vertical'
        id: core
        spacing: 20
        size_hint_y: None
        height: self.minimum_height
        BoxLayout:
            id: bandeau
            size_hint_y: None
            height: 90
            orientation: 'horizontal'
            pos_hint: {'top': 1}
            Image:
                id: photo
            Label:
                id: label_eleve

<PanneauNote>:
    textinput: textinput
    consultation: consultation.__self__
    orientation: 'horizontal'
    BoxLayout:
        orientation: 'vertical'
        TextInput:
            id: textinput
            multiline: True
        BoxLayout:
            size_hint: (1, .1)
            orientation: 'horizontal'
            Button:
                pos_hint: {'right': 0}
                size_hint: (.4, 1)
                text: 'Effacer'
                on_release:
                    textinput.text=''
                    root.liste_notes_view.clear_selection()
            Widget:
            Button:
                pos_hint: {'left': 0}
                size_hint: (.4, 1)
                text: 'Sauvegarder'
                on_release:
                    root.sauvegarde_texte()
    BoxLayout:
        id: consultation
        size_hint: (.3, 1)
        orientation: 'vertical'

<EcranEleve>:
    notebook: nb
    panneaueval: eval
    #panneaueval: panel
    video: video
    Notebook:
        id: nb
        TabbedPanelItem:
            text: 'Evaluation'
            on_release: video.play_video(False)
            id: panel
            PanneauEvaluation:
                id: eval
                pos_hint: {'top': 1}
                size_hint_y: None
                width: root.width - 40
                height: root.height
                nom_eleve: root.name
                liste_modules: root.liste_modules
        TabbedPanelItem:
            video: video
            text: 'Vid√©o'
            on_release: video.play_video(True)
            PanneauVideo:
                name: root.name
                id: video

<PanneauFinFormation>:
    ligne_formateur: ligne_formateur
    ligne_lieu: ligne_lieu
    mise_en_situation: mise_en_situation
    terminerbutton: terminer
    recapitulatif: recapitulatif
    orientation: 'vertical'
    BoxLayout:
        id: ligne_formateur
        height: 30
        size_hint_y: None
        orientation: 'horizontal'
        Label:
            size_hint_y: None
            size_hint_x: .7
            height: 30
            pos_hint: {'right': 0}
            text: 'Nom du formateur du jour:'
    BoxLayout:
        id: ligne_lieu
        height: 30
        size_hint_y: None
        orientation: 'horizontal'
        Label:
            size_hint_y: None
            size_hint_x: .7
            height: 30
            pos_hint: {'right': 0}
            text: 'Nom du lieu de la formation du jour:'
    BoxLayout:
        height: 30
        size_hint_y: None
        orientation: 'horizontal'
        Label:
            height: 40
            size_hint_x: .7
            pos_hint: {'right': 0}
            text: 'Nom mise en situation'
        TextInput:
            id: mise_en_situation
            size_hint_x: .3
            height: 40
    BoxLayout:
        id: recapitulatif
    Button:
        id: terminer
        size_hint: (.2,None)
        right: .9
        height: 30
        text: 'Enregistrer'

<Formation>:
    nb: nb
    Notebook:
        id: nb

<PanneauGroupe>:
    scm: scm
    colonne_eleves: colonne_eleves
    BoxLayout:
        id: bl
        orientation: 'horizontal'
        BoxLayout:
            id: colonne_eleves
            orientation: 'vertical'
            size_hint: (.2,1)
        ScreenManager:
            id: scm
