<MainCoursMenu_>:
    canvas:
        Color:
            rgb: 1, 0, 0
        Rectangle:
            size: self.size
    orientation: 'vertical'
    size: root.width, root.height
    size_hint: (1, 1)
    pos_hint: {"top": 1, "center_x": .5}
    Label:
        text: "bienvenue"

<MainCoursMenu>:
    titre: main.titre
    BoxLayout:
        id: main
        titre: titre
        size: root.width, root.height
        pos_hint: {"top": 1}
        orientation: 'vertical'
        Label:
            id: titre
            pos_hint: {"top": 1}
            size_hint: 1, .1
        GridLayout:
            id: gd
            pos: 0, 0
            cols: 2
            spacing: 10
            pos_hint: {"top": 1, "center_x": .5}
            size_hint: .9, 1
            Button:
                text: "Démarrer une formation"
            Button:
                text: "Gérer les groupes"
            Button:
                text: "Démarrer une évaluation"
            Button:
                text: "Consulter les évaluations"
            Button:
                text: "Consulter les fiches de cours"
