# -*- coding: utf-8 -*-
#: import CalendarWidget KivyCalendar
#: import PopupList liste_popup

<MenuBouton@Button>:
    size_hint: (.5,1)
    pos_hint: { 'center_x': .5 }
    canvas:
        Line:
            rectangle: self.x+1,self.y+1,self.width-1,self.height-1

[GroupeAccordionTitle@TitreEtButton]:
    Label:
        text: ctx.title
        canvas.before:
            Color:
                rgb: 1, 1, 1
            BorderImage:
                source:
                    ctx.item.background_normal \
                    if ctx.item.collapse \
                    else ctx.item.background_selected
                pos: self.pos
                size: self.size
            PushMatrix
            Translate:
                xy: self.center_x, self.center_y
            Rotate:
                angle: 90 if ctx.item.orientation == 'horizontal' else 0
                axis: 0, 0, 1
            Translate:
                xy: -self.center_x, -self.center_y
        canvas.after:
            PopMatrix
    ToggleButton:
        size_hint: .1, 1
        groupe: None
        text: 'Tous'
        on_state: root.on_selection_tous(self)

<CoursRetourBox>:
    bl: bl
    retour: bl.retour
    BoxLayout:
        id: bl
        retour: retour
        orientation: 'horizontal'
        Button:
            text: 'Accueil'
            id: retour
            on_release:
                root.retour_accueil(self)
        Button:
            text: 'Formation'
            on_release:
                root.manager.transition.direction = 'right'
                root.manager.current = root.titre

[CoursTopLayout@CoursRetourBox]:
    size_hint: (.5,.2)
    pos_hint: {'top': 1, 'right': .5}


<CoursGroupeSelection>:
    orientation: 'horizontal'
    cols: 1
    Label:
        text: 'Groupes stagiaires'
        size_hint: (1, .1)

<CoursGroupeExistant>:
    retour: retour
    bl: bl
    BoxLayout:
        orientation: 'vertical'
        CoursTopLayout:
            id: retour
        BoxLayout:
            id: bl
        Button:
            text: 'OK'
            size_hint: (.1,.1)
            pos_hint: {'top': 1, 'right': .8}
            on_release:
                root.on_selection()

<MainCoursMenu>:
    BoxLayout:
        spacing: 10
        orientation: 'vertical'
        size_hint: (.9, 1)
        pos_hint: {'center_x': .5}
        Button:
            id: retour
            text: 'Retour'
            size_hint: .2, .2
            pos_hint: {'center_x': .5}
            on_release:
                root.retour_accueil(self)
        Button:
            text: u"D\u00e9marrer une mise en situation"
            id: demarrer_formation
            on_release:
                root.manager.transition.direction = 'left'
                root.manager.current = 'ex'
        Button:
            text: u"Consulter les \u00e9valuations"
            id: consulter_evaluation
            on_release:
                root.manager.transition.direction = 'left'
                root.manager.current = 'ce'
